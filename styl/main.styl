@import 'mixins'
@import 'begin'
@import 'typographic'
@import 'nib'


#babber .container,
main header,
#portfolio .grid,
#contact>div,
footer #footer-above
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-flow row wrap
	justify-content space-around
	align-items flex-start
	margin 0 auto
	
#banner
	height 80px
	box-shadow 0px 2px 2px 1px rgba(#000, .2)
	border-color #ccc
	.container
		width 95%
		max-width 1024px
		justify-content space-between
		align-items center
		&::before, &::after
			display none
	img
		width 175px
		height 19px
		margin 15px 0
		
nav
	font-size 13px
	transition all .3s
	background #722872
	@media(max-width 768px)
		padding 5px
		text-align center
		margin 0 auto
		width 120%
		.active a
			color #722872
			background #bbb
			box-shadow 0px 2px 2px 1px rgba(#000, 0.1)
	.&>li
		height 100%
		text-transform uppercase
		font-weight bold
		letter-spacing 2px
		display inline-flex
		a
			color #fff
			padding 10px 20px
			&:hover
				background #bbb
				box-shadow 0px 2px 2px 1px rgba(#000, 0.1)
	.&bar-toggle
		margin-right 0
		
#top
	height 80px
	display block
		
main
	>*:not(.scroll-top)
		max-width 1024px
		margin 0 auto
		box-shadow box-shadow 0px 2px 2px 1px rgba(#000, 0.2)
	header
		background #aaa
		color #fff
		text-align right
		padding 70px 10px 50px
		align-items flex-end
		align-content space-around
		@media(min-width 1023px)
			padding 50px 30px
		img
			border-radius 50%
			margin 30px 0 10px
			max-width 80%
			height auto
			width 250px
		.intro-text
			max-width 675px
			text-align center
			margin-bottom 30px
			@media(min-width 1023px)
				text-align right
				width 610px	

